@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/icisleriLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Galeri</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .carousel-inner .item img {
            border-radius: 15px;
            transition: transform 0.5s ease;
        }

            .carousel-inner .item img:hover {
                transform: scale(1.05);
            }

        .container h2 {
            font-family: 'Arial', sans-serif;
            color: #333;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 30px;
        }

        .carousel-indicators li {
            background-color: #333;
        }

        .carousel-control {
            background-image: none;
        }

            .carousel-control .glyphicon-chevron-left,
            .carousel-control .glyphicon-chevron-right {
                color: #333;
            }

        .upload-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 50px;
        }

            .upload-container input[type="file"] {
                margin-bottom: 15px;
            }

            .upload-container .btn {
                background-color: #f0ad4e;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 16px;
                transition: background-color 0.3s ease;
            }

                .upload-container .btn:hover {
                    background-color: #ec971f;
                }
    </style>
</head>
<body>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/web2/resimler/namik_gedik.jpg" alt="Los Angeles" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/web2/resimler/namik_gedik1.jpg" alt="Chicago" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/web2/resimler/namik_gedik10.jpg" alt="New York" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/web2/resimler/namik_gedik11.jpg" alt="New York" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/web2/resimler/namik_gedik12.jpg" alt="New York" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="upload-container">
        <input type="file" name="dosyasec" id="dosyasec" />
        <input type="submit" value="Kaydet" class="btn" />
    </div>

</body>
</html>
